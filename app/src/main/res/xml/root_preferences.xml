<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/general_header">
        <EditTextPreference
            app:key="host"
            app:defaultValue=""
            app:maxLines="1"
            app:singleLine="true"
            app:title="@string/pref_host_display_name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="port"
            app:defaultValue="4444"
            app:maxLines="1"
            app:singleLine="true"
            app:title="@string/pref_port_display_name"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>